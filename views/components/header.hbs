{{!-- 头部 --}}
<header>
    <div class="wrapper">
        <a href="/" class="icon">
            <img src="/images/logo.png" alt="">
        </a>
        <ul class="nav">
            {{#each headerTagList}}
            <li>
                <a href="{{url}}">
                    <span class="nav-item {{className}}">{{title}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
        <div class="search-box">
            <input type="text" placeholder="文章标题……">
            <div class="search-icon">
                <i class="iconfont icon-sousuo"></i>
            </div>
        </div>
    </div>
</header>